<div class="container">
    <% @articles.each do |article|%>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-5">
                <div class="card text-center shadow p-3 mb-5 bg-white rounded">
                    <div class="card-header fst-italic">
                    <% if article.user%>
                      By <%= link_to article.user.user_name, user_path(article.user)%> </div>
                       <% end %>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title , article_path(article),class:"text-success"%></h5>
                        <p class="card-text"><%= truncate(article.description, length:100)%></p>
                        <%= link_to "View" , user_path(article) , class: "btn btn-outline-dark fw-bold" %>
                        <% if logged_in? && (article.user == current_user || current_user.admin?) %>
                        <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-success fw-bold" %>           
                        <%= link_to "Delete", article_path(article), method: :delete , class: "btn btn-outline-danger fw-bold" , data: {confirm: "Are you sure?"}%>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Create <%= time_ago_in_words(article.created_at) %> ago , 
                        Edited <%= time_ago_in_words(article.updated_at)%> ago </small>
                    </div>
                </div>
            </div>
        </div>
    <%end%>
</div>