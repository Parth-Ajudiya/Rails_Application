<h1 class="text-center mt-4"> <%= @user.user_name%>'s Profile </h1>

    <div class="flickr_pagination mb-4">
        <%= will_paginate @articles, :container => false %>
    </div>

    <%= gravatar_for @user, size:175 %>

        <% if logged_in? %> 
            <% if user == current_user %>
                <div class="text-center mt-4">
                <%= link_to "Edit your profile" , edit_user_path(@user), class:"btn btn-outline-success fw-bold" %>
            <% end %>
            <% if current_user.admin? %>
            <%= link_to "Delete user" , user_path(user), class: "btn btn-outline-danger", method: :delete , date: {confirm: "Are you sure delet this user and it's all article"}%>
            <%end%>
        <%end%>
        </div>
        <%= render 'articles/article' %>

        <div class="flickr_pagination mb-4">
            <%= will_paginate @articles, :container => false %>
        </div>